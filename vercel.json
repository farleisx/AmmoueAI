{
  "version": 2,
  "builds": [
    {
      "src": "pages/api/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    // --- Static File Routes ---
    {
      "src": "/upgrade.html",
      "dest": "/upgrade.html"
    },
    {
      "src": "/dashboard.html",
      "dest": "/dashboard.html"
    },
    // --- API Routes ---
    {
      "src": "/api/create-checkout-session",
      "dest": "pages/api/create-checkout-session.js",
      "methods": ["POST"]
    },
    {
      "src": "/api/capture-paypal-order",
      "dest": "pages/api/capture-paypal-order.js",
      "methods": ["GET"]
    }
  ]
}
